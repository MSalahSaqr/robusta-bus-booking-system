{
    "openapi": "3.0.0",
    "info": {
        "title": "Robusta Bus Reservation ApplicationAPI",
        "version": "1.0.0"
    },
    "paths": {
        "/api/login": {
            "post": {
                "tags": [
                    "auth"
                ],
                "summary": "Sign in",
                "description": "Login by email, password",
                "operationId": "authLogin",
                "requestBody": {
                    "description": "Pass user credentials",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "user1@mail.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "PassWord12345"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "success",
                        "content": {
                            "application/json": {}
                        }
                    },
                    "400": {
                        "description": "Bad Request response",
                        "content": {
                            "application/json": {}
                        }
                    },
                    "422": {
                        "description": "Wrong credentials response",
                        "content": {
                            "application/json": {}
                        }
                    }
                }
            }
        },
        "/api/register": {
            "post": {
                "tags": [
                    "auth"
                ],
                "summary": "sign up",
                "description": "Login by email, password",
                "operationId": "authLogin",
                "requestBody": {
                    "description": "Pass user credentials",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "email",
                                    "password",
                                    "c_password"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "user1@mail.com"
                                    },
                                    "name": {
                                        "type": "string",
                                        "example": "Robustan"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "PassWord12345"
                                    },
                                    "re_password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "PassWord12345"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "400": {
                        "description": "Bad Request",
                        "content": {
                            "application/json": {}
                        }
                    },
                    "200": {
                        "description": "Registered successfully",
                        "content": {
                            "application/json": {}
                        }
                    }
                }
            }
        },
        "/api/seats/availableseats": {
            "get": {
                "tags": [
                    "seats"
                ],
                "summary": "available seats",
                "description": "get seats of a trip and their availability",
                "parameters": [
                    {
                        "name": "tripId",
                        "in": "query",
                        "description": "Id of The Trip to Check",
                        "required": true
                    },
                    {
                        "name": "fromStation",
                        "in": "query",
                        "description": "Id of The From Station",
                        "required": true
                    },
                    {
                        "name": "toStation",
                        "in": "query",
                        "description": "Id of The To Station",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "success",
                        "content": {
                            "application/json": {}
                        }
                    },
                    "400": {
                        "description": "Bad Request response",
                        "content": {
                            "application/json": {}
                        }
                    },
                    "422": {
                        "description": "Wrong credentials response",
                        "content": {
                            "application/json": {}
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/seats/reserveseat": {
            "post": {
                "tags": [
                    "seats"
                ],
                "summary": "reserve seats",
                "description": "reserve a seat on a trip from a station to a station",
                "requestBody": {
                    "description": "Pass user credentials",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "seatId",
                                    "fromStation",
                                    "toStation",
                                    "tripId"
                                ],
                                "properties": {
                                    "seatId": {
                                        "type": "integer",
                                        "example": "1343"
                                    },
                                    "fromStation": {
                                        "type": "integer",
                                        "example": "1343"
                                    },
                                    "toStation": {
                                        "type": "integer",
                                        "example": "1343"
                                    },
                                    "tripId": {
                                        "type": "integer",
                                        "example": "1343"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "success",
                        "content": {
                            "application/json": {}
                        }
                    },
                    "400": {
                        "description": "Bad Request response",
                        "content": {
                            "application/json": {}
                        }
                    },
                    "422": {
                        "description": "Wrong credentials response",
                        "content": {
                            "application/json": {}
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "name": "bearerAuth",
                "in": "header",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    },
    "security": [
        []
    ]
}